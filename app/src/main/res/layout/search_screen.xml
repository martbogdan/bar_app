<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/drink_search_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:hint="@string/search_drink"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btnSearchDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnSearch" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resultSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_text_to_start_search" />

        <ListView
            android:id="@+id/lvSearchedDrinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


    </RelativeLayout>



</LinearLayout>